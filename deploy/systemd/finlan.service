[Unit]
Description=FinLAN FastAPI Service
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/finlan
Environment="SECRET_KEY=replace_me"
Environment="DATABASE_URL=sqlite:////opt/finlan/finlan.db"
ExecStart=/opt/finlan/.venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
